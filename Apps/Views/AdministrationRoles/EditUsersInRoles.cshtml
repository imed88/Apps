@model List<Apps.Models.UserRolesViewModels.UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRoles";
    var roleId = ViewBag.roleId;
}

<h2>EditUsersInRoles</h2>

<form method="post">
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            @for(int i=0; i<Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Edit" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>