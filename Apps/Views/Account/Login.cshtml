@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Connexion ";
    Layout = "~/Views/Shared/CustomLogin.cshtml";
}




<div class="row ">
    <div class="col-md-6 col-md-offset-2">
        <section>
            <div class="form-group">
                <img src="~/8.jpg" alt="image" class="img-responsive">
              
            </div>
            @*{
            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            if (loginProviders.Count == 0)
            {
                <div>
                    <p>
                        There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                        for details on setting up this ASP.NET application to support logging in via external services.
                    </p>
                </div>
            }
            else
            {
                <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in loginProviders)
                            {
                                <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }*@
        </section>
</div>

    <div class="col-md-4">
        <section>
            <div class="form-group">
                <img src="~/logo.png" class="img-responsive" width="500"/>
                <hr style="height:2px;border-width:0;color:gray;background-color:gray">
            </div>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4 style="text-decoration:solid">Utiliser vos coordonnnées pour vous connecter</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!--<label asp-for="Password"></label>-->
                    <label style="text-decoration:solid">Mot de passe</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Connexion</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Mot de passe oublié ?</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Créer un nouveau compte utilisateur</a>
                    </p>
                </div>
                <hr style="height:2px;border-width:0;color:gray;background-color:gray">
                <div class="form-group">
                    <p>&copy; 2020 - RNTA</p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
